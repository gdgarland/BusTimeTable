<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"  	
    style="@style/BusListItem"
  >
  
  	<TextView
  		android:id="@+id/address_book_item_name"
  		style="@style/BusItemName"
  		android:layout_alignParentTop="true"
  		android:layout_alignParentLeft="true"
  	/>	
  
  
  	<ImageView
  		android:id="@+id/address_book_item_email"
  		style="@style/BusImageItem"
  		android:src="@drawable/map_pin"
  		android:layout_alignParentTop="true"
  		android:layout_alignParentRight="true"
  	/>
  	<ImageView
  		android:id="@+id/address_book_item_call"
  		style="@style/BusImageItem"
  		android:src="@drawable/call_icon"
  		android:layout_alignParentTop="true"
  		android:layout_toLeftOf="@id/address_book_item_email"
  	/>
  
</RelativeLayout>
